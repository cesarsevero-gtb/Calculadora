<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">




    <TextView

        android:id="@+id/txt_expressao"
        android:layout_width="339dp"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="40sp" />



    <TextView

        android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="30sp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/bt_limpar"
            style="@style/Operation_Button"
            android:layout_weight="3
"
            android:text="C"
            />




        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/divisao"
            style="@style/Operation_Button"
            android:text="/"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/numero_sete"
            style="@style/Numberes_Button"
            android:text="7"
            app:backgroundTint="@color/white" />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/mumero_oito"
            style="@style/Numberes_Button"
            android:text="8"
            />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/numero_nove"
            style="@style/Numberes_Button"
            android:text="9"
            />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/multiplicacao"
            style="@style/Operation_Button"
            android:text="*"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/numero_quatro"
            style="@style/Numberes_Button"
            android:text="4"
            />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/mumero_cinco"
            style="@style/Numberes_Button"
            android:text="5"
            />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/numero_seis"
            style="@style/Numberes_Button"
            android:text="6"
            />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/subtracao"
            style="@style/Operation_Button"
            android:text="-"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/numero_um"
            style="@style/Numberes_Button"
            android:text="1"
            />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/mumero_dois"
            style="@style/Numberes_Button"
            android:text="2"
            />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/numero_tres"
            style="@style/Numberes_Button"
            android:text="3"
            />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/soma"
            style="@style/Operation_Button"
            android:text="+"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/ponto"
            style="@style/Numberes_Button"
            android:text="."
            />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/mumero_zero"
            style="@style/Numberes_Button"
            android:text="0"
            />

        <ImageView

            android:id="@+id/backspace"
            style="@style/Numberes_Button"
            android:src="@drawable/ic_baseline_backspace_24"
            android:scaleType="center"
            />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/igual"
            style="@style/Operation_Button"
            android:text="="
            />


    </LinearLayout>


</LinearLayout>